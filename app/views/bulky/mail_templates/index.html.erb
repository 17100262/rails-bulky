<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row mb-md mt-md">
    <div class="col-md-8">
      <h2 class="m-0">Mail Templates</h2>
    </div>
    <div class="col-md-2 text-right">
      <%= link_to 'New Mail Template', new_mail_template_path, class:"btn btn-primary btn-sm" %>
    </div>
    <div class="col-md-2 text-right">
      <%= link_to 'Send Mail', home_path, class:"btn btn-primary btn-sm" %>
    </div>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <!--<th>Template</th>-->
        <th> Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @mail_templates.each do |mail_template| %>
        <tr>
          <td><%= mail_template.name %></td>
          <td><%= link_to 'Show', mail_template, class:"btn btn-primary btn-sm" %>
          <%= link_to 'Edit', edit_mail_template_path(mail_template), class:"btn btn-primary btn-sm" %>
          <%= link_to 'Destroy', mail_template, class:"btn btn-primary btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
